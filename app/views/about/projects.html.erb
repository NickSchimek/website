<div class="container col-md-8 offset-md-2 topper">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <div id="latest-blogpost">
      <h3 class="lede">Latest</h3>
      <hr>

      <div class="masthead text-center">
        <h1 class="text-color offset-md-2 topper"> Code for PDX </h1>
        <h2 class="text-blue"> Projects </h2>
      </div>

    <% @projects.each do |project| %>
      <div class="row featurette">
        <div class="col-lg-12">
          <div class="col-md-6">
          <%= link_to "projects/#{project.id}" do %>
            <%= image_tag project.img, alt: project.title, class:"img-fluid mx-auto latest-post-img"  %>
          <% end %>
        </div>
        <div class="col-lg">
          <%= link_to "/projects/#{project.id}" do %>
            <h2 class="headline"><%= project.title %></h2>
            <h4 class="lede"><%= project.subtitle %></h4>
            <p>

              <span class="leed author">
                <% if project.updated_at > project.created_at %>
                  Updated <%= project.updated_at.to_s[5,5] %>
                <% else %>
                  <%= project.created_at.to_s[5,5] %>
                <% end %>
              </span>
            </p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>

  </div>
</div>
