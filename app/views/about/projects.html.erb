<div class="container col-md-8 offset-md-2 col-xl-6 offset-xl-3 topper">
  <div class="container">
    <!-- need to build a model to pipe in data -->
    
    <% @projects.each do |project| %>
      <div class="row project-box">
        <div class="col-md-4">
          <h1 class='headline'>
            <%= project.title %>
          </h1>
          <h3 class='lede'>
            <em><%= project.subtitle %></em> 
          </h3>
          <%= image_tag project.img, alt: project.title, class:"img-fluid mx-auto latest-post-img" %>
        </div>
        <div class="col-md">
          <p>
            <%= project.text %>
          </p>
        </div>
      </div>  
    <% end %>
    
    
  </div>
</div>
