<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :blog_subtitle, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_area :text, id: :blog_text, class: 'form-control', rows: 25 %>
  </div>

  <div class="form-group">
		  <label class="btn btn-primary btn-block">
		  		Upload main image file <%= form.file_field :img, style: 'display: none;' %>
		  </label>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: 'btn btn-primary btn-block' %>
  </div>

<% end %>
