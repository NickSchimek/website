
<% colors = ["#00bfbf", "#007f7f", "#007f7f"] %>
<div style="
background-image: url(<%= image_path @blog.img %>);
width: 100%;
background-repeat: no-repeat;
background-size: cover;
border-top: 2px solid #ffff;
padding-bottom: 3rem;
margin-top: 50px;
background-color: #340086;
height: 500px;
background-position: center;
">
  <div id="titlecontainer" style="background: rgba(100,100,100,0.5); padding: 10px; text-align: center;">
    <h1>
       <strong><span><%= @blog.title %> </span></strong>
    </h1>
    <p>
    </p>
  </div>
</div>

<div class="container" style="margin-top: 10px; ">
  <div class="row">

      <div class="col-lg-12" style="padding: 20px; margin: 10px">
        <div>
        <%= link_to blogs_path do %>
          <i class="fas fa-arrow-circle-left text_color text-right" style="font-size: 300%; margin: 10px; color: <%= colors[0] %> "> </i>
        <% end %>

        <% if logged_in?(:site_admin) %>
          <%= link_to edit_blog_path(@blog) do %>
            <i class="fas fa-edit text-right" style="font-size: 300%; margin: 10px; color: <%= colors[0] %> "> </i>
          <% end %>

          <%= link_to blog_path(@blog), method: :delete, data: { confirm: 'Are you sure?' }  do %>
          <i class="fas fa-trash-alt text-right" style="font-size: 300%; margin: 10px; color: <%= colors[0] %> "> </i>
          <% end %>
        <% end %>
        </div>
        <div>
        <% if @blog.updated_at > @blog.created_at %>
          Updated <%= @blog.updated_at.to_s[5,5] %>
        <% else %>
          <h5 style="color: <%= colors[1] %>"> <%= @blog.created_at.to_s[5,5] %> </h5>
        <% end %>
        <h5 style="color: <%= colors[1] %>"> <%= @blog.subtitle %></h5>
        <p style="color: black;" class="blog-text"><%= markdown @blog.text %> </p>
        </div>
      </div>
    </div>

  </div>
</div>

</div>
