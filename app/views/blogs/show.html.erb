<div class="container col-md-6 offset-md-3 topper">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <p>
      <span class="lede author">
      <% if @blog.updated_at > @blog.created_at %>
        Updated <%= @blog.updated_at.to_s[5,5] %>
      <% else %>
        <%= @blog.created_at.to_s[5,5] %>
      <% end %>
      </span>
    </p>
    <h1 class="headline"><%= @blog.title %></h1>
    <h4 class="lede"><%= @blog.subtitle %></h4>

    <%= image_tag @blog.img, alt: @blog.title, class: "img-fluid mx-auto blog-img"%>

    <p class="blog-text"><%= @blog.text %></p>

    <div class="row">
      <div class="col">
        <%= link_to 'Back', blogs_path, class: "btn btn-secondary" %>
      </div>
      <div class="col" style="text-align:right">
        <%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-primary"  if logged_in?(:site_admin) %>
        <%= link_to 'Delete', blog_path(@blog), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"  if logged_in?(:site_admin) %>
      </div>
    </div>
  </div>
</div>
